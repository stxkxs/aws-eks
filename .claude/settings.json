{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/guard-prod-destroy.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-edit-format.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npx cdk *)",
      "Bash(npx prettier *)",
      "Bash(npx eslint *)",
      "Bash(npx tsc *)",
      "Bash(npx jest *)",
      "Bash(kubectl *)",
      "Bash(git *)",
      "Bash(aws cloudformation *)",
      "Bash(aws eks *)",
      "Bash(bash scripts/*)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(mkdir *)",
      "Bash(rm -rf node_modules)",
      "Bash(rm -rf cdk.out)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf .git)"
    ]
  },
  "mcpServers": {
    "orchestra": {
      "command": "node",
      "args": [".claude/orchestra/mcp-server/dist/index.js"]
    }
  }
}
